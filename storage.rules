rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Product images - admin can upload, everyone can read
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.token.email == 'admin@zonabotin.com';
    }
  }
}
